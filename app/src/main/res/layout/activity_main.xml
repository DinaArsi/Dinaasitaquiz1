<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/etNama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nama"
        android:inputType="text"/>

    <TextView
        android:id="@+id/tvTipe"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="Tipe Member"
        android:textSize="18dp" />


    <RadioGroup
        android:id="@+id/rgMembership"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rbGold"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:text="Gold" />

        <RadioButton
            android:id="@+id/rbSilver"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:text="Silver" />

        <RadioButton
            android:id="@+id/rbBiasa"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:text="Biasa" />
    </RadioGroup>

    <EditText
        android:id="@+id/etKodeBarang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Kode Barang"
        />

    <EditText
        android:id="@+id/etJumlahBarang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Jumlah Barang"
        android:inputType="number" />


        <Button
            android:id="@+id/btnProses"

            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:text="Proses"/>

</LinearLayout>

